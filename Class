const daysTH = ['‡∏≠‡∏≤‡∏ó‡∏¥‡∏ï‡∏¢‡πå', '‡∏à‡∏±‡∏ô‡∏ó‡∏£‡πå', '‡∏≠‡∏±‡∏á‡∏Ñ‡∏≤‡∏£', '‡∏û‡∏∏‡∏ò', '‡∏û‡∏§‡∏´‡∏±‡∏™‡∏ö‡∏î‡∏µ', '‡∏®‡∏∏‡∏Å‡∏£‡πå', '‡πÄ‡∏™‡∏≤‡∏£‡πå'];

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏´‡∏≤‡∏Ñ‡∏≤‡∏ö‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô‡πÅ‡∏•‡∏∞‡∏ñ‡∏±‡∏î‡πÑ‡∏õ
function getCurrentAndNextPeriod() {
  const now = dayjs().locale('th');
  const day = daysTH[now.day()];
  if (!timetable[day]) {
    return { current: '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≤‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ô', next: '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≤‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ô', day, time: now.format('HH:mm') };
  }
  const periods = timetable[day];
  let current = { period: '‡∏û‡∏±‡∏Å', subject: '‡∏û‡∏±‡∏Å', code: '-', teacher: '-' };
  let next = { period: '-', subject: '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≤‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ô', code: '-', teacher: '-' };
  for (let i = 0; i < periods.length; i++) {
    const { start, end } = periods[i];
    const startTime = dayjs(now.format('YYYY-MM-DD') + ' ' + start);
    const endTime = dayjs(now.format('YYYY-MM-DD') + ' ' + end);
    if (now.isAfter(startTime) && now.isBefore(endTime)) {
      current = periods[i];
      next = periods[i+1] || { period: '-', subject: '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≤‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ô', code: '-', teacher: '-' };
      break;
    }
    if (now.isBefore(startTime)) {
      current = { period: '‡∏û‡∏±‡∏Å', subject: '‡∏û‡∏±‡∏Å', code: '-', teacher: '-' };
      next = periods[i];
      break;
    }
  }
  // ‡∏ñ‡πâ‡∏≤‡πÄ‡∏•‡∏¢‡∏Ñ‡∏≤‡∏ö‡∏™‡∏∏‡∏î‡∏ó‡πâ‡∏≤‡∏¢
  if (now.isAfter(dayjs(now.format('YYYY-MM-DD') + ' 16:50'))) {
    current = { period: '-', subject: '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≤‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ô', code: '-', teacher: '-' };
    next = { period: '-', subject: '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≤‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ô', code: '-', teacher: '-' };
  }
  return { current, next, day, time: now.format('HH:mm') };
}

// Discord Bot
const client = new Client({ intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages, GatewayIntentBits.MessageContent] });

client.on('ready', () => {
  console.log(`Logged in as ${client.user.tag}`);
});

client.on('messageCreate', message => {
  if (message.content === '!class') {
    const { current, next, day, time } = getCurrentAndNextPeriod();
    if (!timetable[day]) {
      message.reply(`‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏£‡∏µ‡∏¢‡∏ô`);
      return;
    }
    message.reply(
      `üìÖ ‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ: ${day}\n` +
      `üïí ‡πÄ‡∏ß‡∏•‡∏≤‡∏Ç‡∏ì‡∏∞‡∏ô‡∏µ‡πâ: ${time}\n` +
      `üè´ ‡∏Ñ‡∏≤‡∏ö‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô: ${current.period} | ${current.subject} | ${current.code} | ${current.teacher}\n` +
      `‚è≠Ô∏è ‡∏Ñ‡∏≤‡∏ö‡∏ñ‡∏±‡∏î‡πÑ‡∏õ: ${next.period} | ${next.subject} | ${next.code} | ${next.teacher}`
    );
  }
});

